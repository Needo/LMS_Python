# Development Environment
ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/lms_db

# Security
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Application
API_V1_PREFIX=/api
PROJECT_NAME=Learning Management System (Development)

# CORS Origins (more permissive in dev)
BACKEND_CORS_ORIGINS=["http://localhost:4200","http://127.0.0.1:4200"]

# File Storage Configuration
ROOT_FOLDER_PATH=C:/LearningMaterials
MAX_FILE_SIZE=1073741824
ALLOWED_EXTENSIONS=.pdf,.mp4,.mp3,.txt,.docx,.jpg,.png,.epub
SCAN_DEPTH=10

# Security Settings
ENABLE_RATE_LIMITING=true
SCAN_RATE_LIMIT=5
ADMIN_RATE_LIMIT=30
VALIDATE_MIME_TYPES=false

# Backup Configuration
BACKUP_DIR=./backups
MAX_BACKUP_SIZE=1073741824
MAX_BACKUPS_TO_KEEP=10
POSTGRES_BIN_PATH=C:\\Program Files\\PostgreSQL\\18\\bin

# Debug
DEBUG=true
LOG_LEVEL=DEBUG
